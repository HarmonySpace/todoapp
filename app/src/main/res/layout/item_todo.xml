<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:background="@color/black"
    tools:context=".view.MainAdapter"
    >

    <TextView
        android:id="@+id/tvTodoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:text="task_0_or_1"
        android:textSize="25sp"
        android:textColor="@color/color3"
        android:layout_marginStart="50dp"
        tools:ignore="hardcodedText, missingConstrain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/tvTodoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a description jajajajaj"
        android:textSize="20sp"
        android:textColor="@color/black2"
        android:layout_marginStart="50dp"
        tools:ignore="hardcodedText, missingConstrain"
        app:layout_constraintTop_toBottomOf="@id/tvTodoTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>